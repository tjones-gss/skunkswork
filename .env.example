# NAM Intelligence Pipeline - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/nam_intel
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# ENRICHMENT API KEYS
# =============================================================================

# Clearbit - Company enrichment
# Get your key at: https://clearbit.com/
CLEARBIT_API_KEY=your_clearbit_api_key_here

# ZoomInfo - B2B intelligence
# Get your key at: https://www.zoominfo.com/
ZOOMINFO_API_KEY=your_zoominfo_api_key_here

# Apollo.io - Sales intelligence & contacts
# Get your key at: https://www.apollo.io/
APOLLO_API_KEY=your_apollo_api_key_here

# BuiltWith - Technology detection
# Get your key at: https://builtwith.com/
BUILTWITH_API_KEY=your_builtwith_api_key_here

# Hunter.io - Email verification
# Get your key at: https://hunter.io/
HUNTER_API_KEY=your_hunter_api_key_here

# =============================================================================
# GOOGLE APIS
# =============================================================================

# Google Places API - Address verification
# Get your key at: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# =============================================================================
# RATE LIMITING
# =============================================================================

# Default requests per second for web scraping
DEFAULT_RATE_LIMIT=1.0

# Override for specific domains (JSON format)
RATE_LIMIT_OVERRIDES={"linkedin.com": 0.2, "indeed.com": 0.1}

# =============================================================================
# PIPELINE SETTINGS
# =============================================================================

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=10

# Default timeout for agent operations (seconds)
AGENT_TIMEOUT=300

# Minimum quality score for records to be included
MIN_QUALITY_SCORE=60

# Checkpoint interval (minutes)
CHECKPOINT_INTERVAL=5

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# Log output directory
LOG_DIR=logs

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=

# Email alerts (optional)
ALERT_EMAIL_TO=
ALERT_EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug mode (verbose logging, no rate limiting)
DEBUG_MODE=false

# Dry run mode (no writes to database)
DRY_RUN=false

# Use mock APIs instead of real ones
USE_MOCK_APIS=false
