{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nam-pipeline/contracts/schemas/discovery/link_crawler_input.json",
  "title": "LinkCrawlerInput",
  "description": "Input contract for LinkCrawlerAgent",
  "type": "object",
  "properties": {
    "urls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "priority": { "type": "integer", "default": 0 },
          "depth": { "type": "integer", "minimum": 0 },
          "source_url": { "type": ["string", "null"] },
          "association": { "type": ["string", "null"] },
          "page_type_hint": { "type": ["string", "null"] }
        },
        "required": ["url"]
      },
      "minItems": 1,
      "description": "URLs to crawl"
    },
    "association_code": {
      "type": "string"
    },
    "max_concurrent": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    },
    "render_js": {
      "type": "boolean",
      "default": false,
      "description": "Use headless browser for JS rendering"
    },
    "rate_limit": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 10,
      "default": 0.5,
      "description": "Requests per second"
    },
    "_meta": {
      "type": "object",
      "description": "Pipeline metadata (auto-injected)"
    }
  },
  "required": ["urls", "association_code"],
  "additionalProperties": false
}
